<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_top_albums_height">

    <ImageView
        android:id="@+id/img_albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/coldplay"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/primary_dark_transparency">

        <TextView
            android:id="@+id/lb_album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:text="A Rush of Blood to the Head"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lb_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_play_circle"
                android:drawablePadding="4dp"
                android:textColor="@color/text"
                android:text="49267322"/>

            <TextView
                android:id="@+id/lb_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_headset_black"
                android:drawablePadding="4dp"
                android:textColor="@color/text"
                android:text="ColdPlay"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>